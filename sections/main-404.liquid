<style type="text/css">
  .template-404 .title{font-size: 4rem;font-weight: 500;margin: 0;margin-bottom: 5rem; padding-bottom: 5rem;position: relative;}
  .template-404 .button {
    margin: 0;
    font-size: 1.2rem;
    font-weight: 700;
    width: 100%;
    max-width: 200px;
}
  .template-404 .subtext-404{font-size: 10vw;line-height: 1; margin: 0;font-weight: 500;color: rgba(var(--color-foreground), 1);margin-bottom: 3rem;}
  .template-404 {margin-top: 6rem;margin-bottom: 0;}
  .template-404 p.description {margin: 0 auto 5rem;width: 100%; max-width: 400px;font-weight: 500;}
  .template-404 .title:after {
    content: '';
    position: absolute;
    width: 15%;
    left: 50%;
    top: 100%;
    transform: translate(-50%,-50%);
    border-bottom: 2px solid rgba(var(--color-foreground),1);
}
 @media screen and (max-width: 1540px) { .template-404 .subtext-404{font-size: 20rem;line-height: 1;}}
 @media screen and (max-width: 990px) { 
   .template-404 .subtext-404{font-size: 20rem;line-height: 1;}
   .template-404 .title{font-size: calc(50px * 0.8);}
    }
 @media screen and (max-width: 749px){
   .template-404 {margin-top: 5.2rem;}
   .template-404 .subtext-404{font-size: 14rem;line-height: 1;}
   .template-404 .title{font-size: calc(50px * 0.6);}
 }     
  @media screen and (max-width: 749px){
    .template-404 .title{margin-bottom: 2rem; padding-bottom: 2rem;}
    .template-404 {margin-top: 3rem;} 
    .template-404 .title {  font-size: calc(50px * 0.4);}
   }
</style>

<div class="template-404 page-width page-margin center">
  <p class="subtext-404">
    {{ 'templates.404.subtext' | t }}
  </p>
  <h1 class="title">
    {{ 'templates.404.title' | t }}
  </h1>
    <p class="description">
    {{ 'templates.404.description' | t }}
  </p>
  <a href="{{ routes.root_url }}" class="button">
     {{ 'templates.404.button_text' | t }}
  </a>
</div>
